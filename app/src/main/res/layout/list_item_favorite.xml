<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="favorite" type="com.wip.hockey.model.Favorite"/>
        <variable name="handler" type="com.wip.hockey.fragment.ListFavoriteFragment"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        android:onClick="@{() ->  handler.onClick(favorite)}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sub_division_name"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@{favorite.subDivisionName}"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textSize="45dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@{favorite.category.name}"/>

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#00ffffff"
                android:src="@{ favorite == null ? @drawable/button_normal : @drawable/button_pressed}"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/category"
                android:onClick="@{(button) ->  handler.onClickFavorite(favorite)}"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>